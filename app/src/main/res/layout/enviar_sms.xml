<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/txtNomeSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="22dp"
        android:inputType="textPersonName"
        android:hint="Digite o Nome do Amigo" />

    <EditText
        android:id="@+id/txtNumeroSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18dp"
        android:inputType="number"
        android:hint="Digite o Celular do Amigo" />

    <EditText
        android:id="@+id/txtMensagemSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18dp"
        android:hint="Digite a Mensagem aqui..."
        android:inputType="textMultiLine"
        android:lines="3" />

    <Button
        android:id="@+id/btnEnviarSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar SMS"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnEnviarWhats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar para WhatApp"/>

    <Button
        android:id="@+id/btnCancelarSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_marginTop="20dp"
        />

</LinearLayout>
